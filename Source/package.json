{
  "name": "guitaros-portable",
  "version": "1.2.1",
  "description": "Guitar learning and practice OS",
  "author": "Ackaron",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:portable": "npm run build && electron-builder --win portable",
    "dist:installer": "npm run build && electron-builder --win nsis",
    "archive-release": "node scripts/archive-release.js",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.guitaros.app",
    "productName": "GuitarOS",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png",
      "forceCodeSigning": false
    },
    "portable": {
      "artifactName": "GuitarOS_Portable.exe",
      "requestExecutionLevel": "user"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "shortcutName": "GuitarOS",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "GuitarOS-Setup-${version}.exe",
      "deleteAppDataOnUninstall": true,
      "include": "../installer/components.nsh",
      "warningsAsErrors": false
    },
    "directories": {
      "output": "dist"
    },
    "extraFiles": [
      {
        "from": "./Apps",
        "to": "Apps",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./Data",
        "to": "Data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "scripts",
        "to": "scripts",
        "filter": [
          "*.lua"
        ]
      }
    ],
    "files": [
      "**/*",
      "!Apps",
      "!Data",
      "!src"
    ],
    "asar": true
  },
  "dependencies": {
    "@coderline/alphatab": "^1.8.1",
    "fs-extra": "^11.3.3",
    "lowdb": "^7.0.0",
    "lucide-react": "^0.330.0",
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recharts": "^3.7.0",
    "uuid": "^13.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "wait-on": "^7.2.0"
  }
}